<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre_id %>
  <%= f.select :genre_id, Genre.all.map {|g| [g.name, g.id]} %><br>
  <h3>Notes:</h3>
  <ol>
    1. <input name="song[note_contents][]" id="song_notes_1"><br>
    2. <input name="song[note_contents][]" id="song_notes_2"><br>
    3. <input name="song[note_contents][]" id="song_notes_3"><br>
  </ol>
  
  <br />

  <%= f.submit %>
<% end %>


